<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/question_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/started_txt_headline"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/question_field"
    android:backgroundTint="?attr/card_background"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/category_txt_activity"
            android:textColor="?attr/Text_Color"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/question_answer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/category_txt_activity"
            android:textColor="?attr/Text_Color"
            android:textSize="20dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>